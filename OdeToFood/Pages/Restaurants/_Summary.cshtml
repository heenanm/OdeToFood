@using OdeToFood.Core
@model Restaurant

    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>
        <div class="card-footer">
            <a class="btn btn-outline-primary"
               asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">
                Restaurant Details
            </a>
            <a class="btn btn-outline-primary"
               asp-page="./Edit"
               asp-route-restaurantId="@Model.Id">
                Edit Details
            </a>
            <a class="btn btn-outline-primary"
               asp-page="./Delete"
               asp-route-restaurantId="@Model.Id">
                Delete Restaurant
            </a>
        </div>

    </div>